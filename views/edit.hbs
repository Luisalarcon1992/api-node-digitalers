<div class='container'>
  <form action='/propiedades/{{data._id}}?_method=PUT' method='POST'>
    <input type='hidden' name='_method' value='PUT' />
    <div class='formulario-centered'>
      <h1>Editar las propiedades</h1>
      <form action='/user/login' method='POST'>
        <div class='form-card'>
          <div class='form-group'>
            <label for='name'>Nombre de propiedad</label>
            <input
              type='text'
              name='name'
              id='name'
              placeholder='Nombre de la propiedad'
              minlength='5'
              maxlength='50'
              value='{{data.name}}'
              required
            />
          </div>
          <div class='form-group'>
            <label for='description'>Descripción</label>
            <input
              type='text'
              name='description'
              id='description'
              placeholder='Contraseña'
              maxlength='500'
              value='{{data.description}}'
              required
            />
          </div>
          <div class='form-group'>
            <label for='direction'>Dirección</label>
            <input
              type='text'
              name='direction'
              id='direction'
              placeholder='Dirección'
              minlength='4'
              maxlength='100'
              value='{{data.direction}}'
              required
            />
          </div>
          <div class='form-group number'>
            <label for='price'>Precio</label>
            <input
              type='number'
              name='price'
              id='price'
              placeholder='Precio'
              min='0'
              value='{{data.price}}'
              required
            />
          </div>
          <div class='form-group number'>
            <label for='room'>Número habitaciones</label>
            <input
              type='number'
              name='room'
              id='room'
              placeholder='Número habitaciones'
              min='1'
              value='{{data.room}}'
              required
            />
          </div>
          <div class='form-group number'>
            <label for='bathroom'>Número baños</label>
            <input
              type='number'
              name='bathroom'
              id='bathroom'
              placeholder='Número baños'
              min='1'
              value='{{data.bathroom}}'
              required
            />
          </div>
          <div class='form-group number'>
            <label for='dimension'>Dimension en m2</label>
            <input
              type='number'
              name='dimension'
              id='dimension'
              placeholder='Dimension en m2'
              min='1'
              required
              value='{{data.dimension}}'
            />
          </div>
          <div class='form-group'>
            <label for='cathegoryProperty'>Categoría</label>
            <select name='cathegoryProperty' id='cathegoryProperty' required>
              {{#each context.validCategories}}
                <option value='{{this}}'>{{this}}</option>
              {{/each}}
            </select>
          </div>

          <div class='form-group'>
            <label for='state'>Estado</label>
            <select name='state' id='state' required>
              {{#each stateProperty.state}}
                <option value='{{this}}'>{{this}}</option>
              {{/each}}
            </select>
          </div>
          <div class='form-group'>
            <label for='urlimage'>URL Imagen</label>
            <input
              type='text'
              name='urlimage'
              id='urlimage'
              placeholder='URL de la imagen'
              value='{{data.urlimage}}'
              required
            />
          </div>
          <button type='submit'>Editar propiedad</button>
        </div>
      </form>
    </div>
  </form>
</div>